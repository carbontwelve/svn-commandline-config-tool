{% for location in locations %}
<Location "{{ location.getLocation() }}" >

    DAV svn
    SVNParentPath "{{ location.SVNParentPath }}"
    SVNListParentPath On
{% if (location.isProtected()) %}

    AuthType Basic
    AuthName "{{ location.authName }}"
    AuthUserFile {{ location.authUserFile }}
    Require valid-user
{% endif %}
    SVNIndexXSLT "/repos-web/view/repos.xsl"

</Location>

{% endfor %}
